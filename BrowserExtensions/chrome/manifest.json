{
    "manifest_version": 2,

    "name": "Beardie",
    "short_name": "Beardie",
    "description": "This is companion extension for Beardie App. Extension allow you to use Beardie for controlling media players on appropriate sites.",
    "version": "${BS_BUILD}",
    "homepage_url": "${BS_HOMEPAGE}",

    "icons":
    {
        "16": "icon/Icon-16.png",
        "32": "icon/Icon-32.png",
        "48": "icon/Icon-48.png",
        "64": "icon/Icon-64.png",
        "128": "icon/Icon-128.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["shared/utils.js"]
        },
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "js": [ "shared/init.js", "shared/eventClient.js", "shared/content.js"]
        }

    ],
    "background":
    {
        "page": "main.html",
        "persistent": true
    },
    "permissions": [
        "tabs",
        "nativeMessaging",
        "<all_urls>",
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        "shared/*eventsController.js",
        "/shared/utils.js"
    ]
}
